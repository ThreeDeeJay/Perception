<?xml version="1.0"?>
<shaderConfig>
	<rules>
		<!-- Basically, this will match all shaders, they all use constants 0-3 -->
		<rule id="2" shaderCodeFindPattern="o0.x, v0, c0" constantType="MatrixC" modToApply="1" startReg="0" registerCount="4" transpose="true"/>
		<rule id="3" shaderCodeFindPattern="o0.x, %s, c0" shaderCodeRegSub="r%i" constantType="MatrixC" modToApply="1" startReg="0" registerCount="4" transpose="true"/>
		<rule id="4" shaderCodeFindPattern="oPos.x, v0, c0" constantType="MatrixC" modToApply="1" startReg="0" registerCount="4" transpose="true"/>
		<rule id="5" shaderCodeFindPattern="oPos.x, %s, c0" shaderCodeRegSub="r%i" constantType="MatrixC" modToApply="1" startReg="0" registerCount="4" transpose="true"/>



		<rule id="6" shaderCodeFindPattern="o0.x, v0, c4" constantType="MatrixC" modToApply="1" startReg="4" registerCount="4" transpose="true"/>
		<rule id="7" shaderCodeFindPattern="o0.x, %s, c4" shaderCodeRegSub="r%i" constantType="MatrixC" modToApply="1" startReg="4" registerCount="4" transpose="true"/>
		<rule id="8" shaderCodeFindPattern="oPos.x, v0, c4" constantType="MatrixC" modToApply="1" startReg="4" registerCount="4" transpose="true"/>
		<rule id="9" shaderCodeFindPattern="oPos.x, %s, c4" shaderCodeRegSub="r%i" constantType="MatrixC" modToApply="1" startReg="4" registerCount="4" transpose="true"/>
	</rules>

	<defaultRuleIDs>
		<ruleID id="2" />
		<ruleID id="3" />
		<ruleID id="4" />
		<ruleID id="5" />
		<ruleID id="6" />
		<ruleID id="7" />
		<ruleID id="8" />
		<ruleID id="9" />
	</defaultRuleIDs>
	
	<!-- Shadows -->
	<!--<shaderSpecificRuleIDs shaderHash="?" ObjectType="Shadows"/>-->

	<!-- HUD stuff -->
	<!-- <shaderSpecificRuleIDs shaderHash="714304875" squishViewport="true"><ruleID id="3"/></shaderSpecificRuleIDs> -->
</shaderConfig>
